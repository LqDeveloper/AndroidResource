<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/state_list_drawable"
        android:gravity="center"
        android:text="StateListDrawable"
        android:textAllCaps="false"
        android:textSize="20sp" />


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/layer_drawable"
        android:gravity="center"
        android:text="LayerDrawable"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_drawable"
        android:gravity="center"
        android:text="ShapeDrawable"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/clip_drawable" />

    <Button
        android:id="@+id/animation"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#0f0"
        android:gravity="center"
        android:text="AnimationDrawable"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#0f0"
        android:gravity="center"
        android:text="@string/helloworld"
        android:textAllCaps="false"
        android:textSize="20sp" />

</LinearLayout>